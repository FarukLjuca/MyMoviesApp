<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/customred</item>
        <item name="colorPrimaryDark">@color/customreddark</item>
        <item name="colorAccent">@color/customred</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:colorActivatedHighlight">@color/white</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_selector</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
    </style>

    <style name="MyRatingBarRate" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_selector</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:numStars">10</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Subcontent">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BasicText">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/textcustomgray</item>
        <item name="android:lines">7</item>
    </style>
</resources>
