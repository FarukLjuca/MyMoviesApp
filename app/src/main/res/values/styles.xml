<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:tint">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_selector</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
