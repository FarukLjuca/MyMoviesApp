<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atlantbh.mymoviesapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MovieListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.DetailsActivity" />
        <activity android:name=".activities.ActorDetailsActivity" />
        <activity
            android:name=".activities.MovieVideoActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings" />

        <service
            android:name=".offline.OfflineSyncService"
            android:exported="false"/>
    </application>

</manifest>
